<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/liner_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/place_name_list"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Название места"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/favourite_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/unfavourite" />

        </LinearLayout>

        <ImageView
            android:id="@+id/place_image_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/liner_item"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/place_schedule_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Расписание"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@+id/place_image_list"
            android:textAllCaps="false"
            android:padding="5dp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
